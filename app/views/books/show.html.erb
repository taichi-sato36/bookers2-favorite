

<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<% if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>
				<h2>User info</h2>

				<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= @book.user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @book.user.introduction %>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if @book.user == current_user %>
					<p>
						<%= link_to '', edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% else %>
					<p>
						<%= link_to '', user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% end %>
				</div>
				<%= render 'books/new-book', book: @newbook %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %><br>
								<p><%= link_to @book.user.name, user_path(@book.user.id) %></p></td>
							<td><%= link_to @book.title, book_path %></td>
							<td><%= @book.body %></td>
							<td id="favorites_buttons_<%= @book.id %>">
								<%= render partial: 'favorites/favorite', locals: { book: @book} %>
							</td>
							<td><p>コメント数:<%= @book.book_comments.count %></p></td>
							<% if @book.user == current_user %>
							<td><%= link_to "Edit", edit_book_path %></td>
							<% end %>
							<% if @book.user == current_user %>
							<td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
				<div class="col-sm-9">
				<ol>
				    <% @book.book_comments.each do |book_comment| %>
				        <li class="comment">
				            <div class="comment-body bb">
				                <div class="comment-text">
				                    <div class="comment-entry"><%= book_comment.comment %></div>
				                    <% if current_user == book_comment.user %>
										<%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete, "data-confirm" => "本当に削除しますか?" %>
									<% end %>
				                </div>
				            </div>
				        </li>
				    <% end %>
				</ol>
			</div>
				<%= form_for [@book, @book_comment] do |f| %>
				<div class="col-sm-9">
					<%= f.text_area :comment, rows:'5' ,class: "form-control" %>
					<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>



